{
  "name": "toast-app",
  "version": "v0.2.5",
  "description": "A customizable shortcut launcher for macOS and Windows",
  "main": "src/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "dev:win": "set NODE_ENV=development && electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "test": "jest",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.{js,jsx,json,css,html}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/opspresso/toast-app.git"
  },
  "keywords": [
    "electron",
    "shortcut",
    "launcher",
    "productivity",
    "desktop",
    "utility"
  ],
  "author": "nalbam <me@nalbam.com>, bruce <bruce@daangn.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/opspresso/toast-app/issues"
  },
  "homepage": "https://github.com/opspresso/toast-app#readme",
  "dependencies": {
    "@nut-tree-fork/nut-js": "^4.2.6",
    "axios": "^1.8.4",
    "dotenv": "^16.5.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "keytar": "^7.9.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "electron": "^35.1.5",
    "electron-builder": "^24.13.3",
    "electron-builder-notarize": "^1.5.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5"
  },
  "build": {
    "appId": "com.opspresso.toast-app",
    "productName": "Toast",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json"
    ],
    "afterSign": "electron-builder-notarize",
    "mac": {
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "target": [
        "dmg"
      ],
      "icon": "assets/icons/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icons/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  },
  "publish": {
    "provider": "github",
    "owner": "opspresso",
    "repo": "toast-app"
  },
  "packageManager": "pnpm@10.6.3+sha512.bb45e34d50a9a76e858a95837301bfb6bd6d35aea2c5d52094fa497a467c43f5c440103ce2511e9e0a2f89c3d6071baac3358fc68ac6fb75e2ceb3d2736065e6"
}
