{
  "name": "toast-app",
  "version": "1.0.0",
  "description": "A customizable shortcut launcher for macOS and Windows",
  "main": "src/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "dev:win": "set NODE_ENV=development && electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "test": "jest",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.{js,jsx,json,css,html}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/opspresso/toast-app.git"
  },
  "keywords": [
    "electron",
    "shortcut",
    "launcher",
    "productivity",
    "desktop",
    "utility"
  ],
  "author": "Opspresso",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/opspresso/toast-app/issues"
  },
  "homepage": "https://github.com/opspresso/toast-app#readme",
  "dependencies": {
    "@nut-tree-fork/nut-js": "^4.2.6",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^35.1.5",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5"
  },
  "build": {
    "appId": "com.opspresso.toast-app",
    "productName": "Toast App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icons/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icons/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  }
}
